<% if (title) { %>
    <h1 class="title-h1"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
            <li>* <%= error.msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <ul id="inbox-options">
            <li><a href="/message/new-message" title="Click to create a new message">Create New Message</a></li>
            <% if (archivedMessage) { %>
                <li><a href="message/archived" title="Click to view archived messages">View <%= archivedMessage %> Archived Message(s)</a></li>
           <% } else { %>
                <li>There are no archived messages.</li>
            <% } %>
        </ul>

        <%- inboxMessages %>