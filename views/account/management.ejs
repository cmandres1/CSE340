<h1 class="account-management-title"><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<% if(locals.accountData.account_type == 'Client') { %>
    <h2 class="welcome-message">Welcome, <%= name %></h2>
    <h3 class="management-header">Account Management</h3>   
    <ul class="account-management-list">
      <li><a title="Click to edit your account information" href="/account/update/">Edit Account information</a></li>
    </ul>
    <h3>Message Center</h3>
    <ul id="message-center">
        <% if (unreadMessage) { %>
            <li>You have <%= unreadMessage %> unread message(s). </li>
       <% } else { %>
            <li>There are no unread messages.</li>
        <% } %>
        <li> Go to <a href="/message" title="Click to view messages">inbox</a> </li>
    </ul>
<% } else { %>
    <h2 class="welcome-message">Welcome, <%= name %></h2>
    <h3 class="management-header">Account Management</h3>   
    <ul class="account-management-list">
      <li><a title="Click to edit your account information" href="/account/update/">Edit Account information</a></li>
    </ul>
    <h3>Message Center</h3>
    <ul id="message-center">
        <% if (unreadMessage) { %>
            <li>You have <%= unreadMessage %> unread message(s). </li>
       <% } else { %>
            <li>There are no unread messages.</li>
        <% } %>
        <li> Go to <a href="/message" title="Click to view messages">inbox</a> </li>
    </ul>
    <h3 class="management-header">Inventory Management</h3>
    <ul class="inventory-management-list">
      <li><a title="Click to update the inventory" href="/inv/">Update inventory</a></li>
  </ul>
<% } %>